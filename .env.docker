# Docker Environment Configuration for Docketify
# Copy this file to .env and update values for your deployment

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://docketify_user:your_secure_db_password_here@database:5432/docketify

# ==============================================
# APPLICATION SECURITY
# ==============================================
# Generate with: openssl rand -base64 48
SESSION_SECRET=your_secure_session_secret_minimum_32_characters_long

# ==============================================
# EMAIL SERVICE (SENDGRID)
# ==============================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# ==============================================
# REDIS CACHE (OPTIONAL)
# ==============================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=5000

# ==============================================
# SSL/TLS CONFIGURATION (PRODUCTION)
# ==============================================
# Set to true if using HTTPS with valid certificates
USE_SSL=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# ==============================================
# DOMAIN CONFIGURATION
# ==============================================
# Your production domain (used for email links)
PRODUCTION_DOMAIN=yourdomain.com

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_DIR=/app/logs